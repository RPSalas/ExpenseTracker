{{>header}}
    <script src="js/ExpenseTracker.js"></script>

    <div class="FormContainer">
        <div class="Input">
            <input type="text" class="Search" id="Searched" placeholder="Case Sensitive Search. Leave bar blank and search for list refresh.">
            <button type="button" class = "SearchList" onclick="search()">Search</button>
            <button type="button" class = "AddExpense" onclick="showForm()">Add Expense</button>
        </div>
    </div>

    <div id="ExpenseForm" class="EForm" style="display:none;">
        <form class="form-horizontal" action="/action_page.php">
            <div class="form-group">
                <label class="control-label col-sm-4" for="name">Name of expense:</label>
                <div class="col-sm-6">
                <input type="text" class="form-control" id="name" placeholder="Enter name of the expense">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="cost">Cost ($):</label>
                <div class="col-sm-6">
                <input type="number" class="form-control" id="cost" placeholder="Enter cost">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" for="category">Category:</label>
                <div class="col-sm-6">
                <input type="text" class="form-control" id="category" placeholder="Enter category">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-10">
                <button type="button" class="btn btn-default" onclick="AddList()">Submit</button>
                </div>
            </div>
        </form>
    </div>

    <div class="container" id="tableContainer">
        <h2>List of Expenses</h2>      
        <table id="ExpenseTable" class="table table-hover">
            <thead>
            <tr>
                <th>Name of expense</th>
                <th>Cost ($)</th>
                <th>Category</th>
                <th></th>
            </tr>
            </thead>
            <tbody id="TableBody">

            </tbody>
        </table>
    </div>
{{>footer}}
